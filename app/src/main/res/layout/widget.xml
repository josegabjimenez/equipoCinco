<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:paddingHorizontal="20dp"
    android:paddingVertical="5dp">

    <FrameLayout
        android:id="@+id/flWidget"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"
        android:background="@drawable/rounded_background"
        android:elevation="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icono_login"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inventory"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:layout_below="@+id/ivLogo"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/tvTop_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Cuánto tengo de inventario?"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@id/ivShow_inventory"
                android:layout_alignParentTop="true"/>

            <ImageView
                android:id="@+id/ivShow_inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ojo_alternancia_1"
                android:layout_marginEnd="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                />

            <TextView
                android:id="@+id/tvEarnings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ * * * *"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_below="@id/ivShow_inventory"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/tvBottom_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestionar inventario"
                android:textColor="@color/white"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/tvEarnings"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/ivSettings"/>
                
            <ImageView
                android:id="@+id/ivSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="5dp"
                android:layout_below="@id/tvEarnings"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>

